<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".17"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/llExportCustomer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/light_pink"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_synch_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:paddingLeft="5dp"
                    android:src="@drawable/exportcustomers" />

                <com.zaimus.manager.CustomTextViewBold
                    android:id="@+id/textViewExportCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:gravity="center|top"
                    android:text="EXPORT \nCUSTOMERS"
                    android:textColor="#404040" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llExportSurvey"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/light_pink"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_synch"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/exportsurvey" />

                <com.zaimus.manager.CustomTextViewBold
                    android:id="@+id/textViewSyncCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:gravity="center|top"
                    android:text="EXPORT\nSURVEY"
                    android:textColor="#404040" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRestore"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/light_pink"

                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button_restore"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/restore" />

                <com.zaimus.manager.CustomTextViewBold
                    android:id="@+id/textViewRestore"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:gravity="center|top"
                    android:text="@string/restore"
                    android:textColor="#404040" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSyncCustomer"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/light_pink"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/synccustomer" />

                <com.zaimus.manager.CustomTextViewBold
                    android:id="@+id/textViewSyncNewCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".3"

                    android:gravity="center|top"
                    android:text="SYNC\nCUSTOMERS"
                    android:textColor="#404040" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/button_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/attendance"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="ATTENDANCE"
                    android:textColor="#404040"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/llImportData"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"

                android:background="@drawable/light_pink"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button_aboutdeveloper"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/import_icon" />

                <com.zaimus.manager.CustomTextViewBold
                    android:id="@+id/textViewSelectSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:gravity="center|top"
                    android:text="@string/import_text"
                    android:textColor="#404040" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGps"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/light_pink"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/gps" />

                <com.zaimus.manager.CustomTextViewBold
                    android:id="@+id/textViewGPS"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:gravity="center|top"
                    android:text="GPS"
                    android:textColor="#404040" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBackup"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/light_pink"

                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button_backup"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/backup" />

                <com.zaimus.manager.CustomTextViewBold
                    android:id="@+id/textViewBackUp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:gravity="center|top"
                    android:text="@string/backup"
                    android:textColor="#404040" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSelectSurvey"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/light_pink"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button_selectsurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/selectsurvey" />

                <com.zaimus.manager.CustomTextViewBold
                    android:id="@+id/textViewAboutDeveloper"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:gravity="center|top"
                    android:text="SELECT SURVEY"
                    android:textColor="#404040" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"></ProgressBar>

</LinearLayout>