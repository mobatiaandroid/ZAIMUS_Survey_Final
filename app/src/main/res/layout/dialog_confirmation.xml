<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/curved_rel_layout">

    <TextView
        android:id="@+id/txt_titlename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txt_titlename"
        android:layout_margin="2dp"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/relText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_separator"
        android:layout_centerInParent="true"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:maxLines="5"
            android:minLines="2"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/relText"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="OK"
        android:textColor="@color/white"
        android:background="@drawable/dialog_button_rounded"
        android:textSize="13sp" />

</RelativeLayout>

